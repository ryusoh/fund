#!/usr/bin/env bash
# Verify vendor assets are present before committing
set -euo pipefail

if ! command -v node >/dev/null 2>&1; then
  echo "[vendor:verify] Node is required for vendor verification. Skipping." >&2
  exit 0
fi

node scripts/check_vendor.js || {
  echo "\nVendor assets missing. Run: npm run vendor:fetch" >&2
  exit 1
}

exit 0

